{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.10.6/.schema/devbox.schema.json",
  "packages": {
    "python":                              "3.12.3",
    "python312Packages.numpy":             "latest",
    "python312Packages.pip":               "latest",
    "python312Packages.pybind11":          "latest",
    "python312Packages.pytest":            "latest",
    "python312Packages.setuptools":        "latest",
    "python312Packages.torch":             "latest",
    "python312Packages.typing-extensions": "latest",
    "python312Packages.wheel":             "latest",
    "cmake":                               "latest",
    "fmt": {
      "version": "latest",
      "outputs": ["out", "dev"]
    },
    "llvm":                  "latest",
    "llvmPackages.bintools": "latest",
    "llvmPackages.openmp":   "latest"
  },
  "env": {
    "MACOSX_DEPLOYMENT_TARGET": "14.0"
  },
  "shell": {
    "init_hook": [
      "rm -rf .eggs",
      ". $VENV_DIR/bin/activate"
    ]
  }
}
