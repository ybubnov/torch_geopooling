{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.10.6/.schema/devbox.schema.json",
  "packages": {
    "python":                             "3.8.18",
    "python38Packages.numpy":             "latest",
    "python38Packages.pip":               "latest",
    "python38Packages.pybind11":          "latest",
    "python38Packages.pytest":            "latest",
    "python38Packages.setuptools":        "latest",
    "python38Packages.torch":             "latest",
    "python38Packages.typing-extensions": "latest",
    "python38Packages.wheel":             "latest",
    "cmake":                              "latest",
    "fmt": {
      "version": "latest",
      "outputs": ["out", "dev"]
    },
    "llvm":                  "latest",
    "llvmPackages.bintools": "latest",
    "llvmPackages.openmp":   "latest"
  },
  "env": {
    "MACOSX_DEPLOYMENT_TARGET": "14.0"
  },
  "shell": {
    "init_hook": [
        "rm -rf .eggs",
        ". $VENV_DIR/bin/activate"
    ]
  }
}
